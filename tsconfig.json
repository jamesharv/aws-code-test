{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2017",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["reflect-metadata"],
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}
